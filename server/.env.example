# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ------------------
# Local Database
# ------------------
# MongoDB credentials (used by Docker)
MONGODB_USER=quickblog
MONGODB_PASSWORD=quickblog123
MONGODB_DATABASE=quickblog

# Connection URI (uses the credentials above)
MONGODB_URI=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@localhost:27017/${MONGODB_DATABASE}

# ------------------
# Server
# ------------------
PORT=5001

# Client URLs allowed for CORS (comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173

NODE_ENV=development

# ------------------
# Authentication
# ------------------
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin login credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password-here

# ------------------
# ImageKit (Image Uploads)
# ------------------
# Get your keys from: https://imagekit.io/dashboard
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-id

# ------------------
# Google Gemini AI (Content Generation)
# ------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
